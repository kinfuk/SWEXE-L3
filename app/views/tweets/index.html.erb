
<% @tweet.each do |e| %>
    <p> 
        <%= "近畿大学" %>
        <i class="fas fa-check-circle blue"></i>
        <%= "@kinkidaigakuPR・" %>
        <%= ((Time.current - e.tdate) / 60).to_i.to_s + "分前" %><br>
        <%= e.message %> 
        <%= image_tag "/get_tweet/#{e.id}" %>
        
        <%= ((Time.current - e.tdate) / 60).to_i.to_s + "分前" %>
        <br>
        <a href="/tweets/#{e.id}"><i class="far fa-comment"></i></a>　　
        <i class="fas fa-retweet"></i>　　
        <i class="far fa-heart"></i>　　
        <a href="/tweets/#{e.id}", method: :delete><i class="fas fa-trash"></i></a>　　
        <a href="/tweets/#{e.id}/edit"><i class="fas fa-edit"></i></a>　　
        <i class="fas fa-upload"></i>
    </p> 
<% end %>
